<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Create Your Account</title>
</head>
<body class="bg-gradient-to-br from-zinc-900 to-black min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white/5 backdrop-blur-lg border border-white/10 text-white p-8 rounded-2xl shadow-2xl space-y-6">
    
    <!-- Logo Placeholder -->
    <div class="flex justify-center">
      <div class="w-14 h-14 bg-purple-600 rounded-full flex items-center justify-center text-xl font-bold shadow-md">
        ğŸš€
      </div>
    </div>

    <!-- Heading -->
    <h2 class="text-3xl font-bold text-center">Create Your Account</h2>
    <p class="text-sm text-center text-zinc-400">Join us and unlock your potential.</p>

  <!-- Success/Error Message -->
    <% if (typeof message !== 'undefined') { %>
      <p class="text-center text-sm text-green-400">
        <%= message %>
      </p>
    <% } %>
    <!-- Form -->
    <form action="/create" method="post" class="space-y-4">
      <input
        type="text"
        name="username"
        placeholder="Username"
        required
        class="w-full px-4 py-2 rounded-md bg-zinc-800 border border-zinc-700 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-purple-600"
      />

      <input
        type="email"
        name="email"
        placeholder="Email address"
        required
        class="w-full px-4 py-2 rounded-md bg-zinc-800 border border-zinc-700 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-purple-600"
      />

      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="w-full px-4 py-2 rounded-md bg-zinc-800 border border-zinc-700 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-purple-600"
      />

      <button
        type="submit"
        class="w-full py-2 bg-purple-600 hover:bg-purple-700 transition-colors rounded-md font-semibold text-white"
      >
        Create Account
      </button>
    </form>

    <!-- Footer Text -->
    <p class="text-sm text-center text-zinc-400">
      Already have an account?
      <a href="/login" class="text-purple-400 hover:underline">Sign in</a>
    </p>
  </div>
</body>
</html>
